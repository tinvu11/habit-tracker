<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    android:background="@color/surface"
    android:transitionName="fab_to_add_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.addedit.AddFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:title="Tạo thói quen mới"
        style="@style/TextAppearance.Material3.ActionBar.Title"
        app:titleCentered="true" />

    <!-- Scroll -->
    <ScrollView
        android:id="@+id/myScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/materialToolbar"
        app:layout_constraintBottom_toTopOf="@+id/btnSubmit">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Tên thói quen -->
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Tên thói quen"
                style="@style/TextAppearance.Material3.TitleMedium.Emphasized"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtNameHabit"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_item_on_surface"
                android:ems="10"
                android:inputType="text"
                android:paddingLeft="8dp"
                app:layout_constraintEnd_toStartOf="@+id/cardViewIcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewIcon"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginEnd="16dp"
                android:elevation="0dp"
                app:cardCornerRadius="12dp"
                app:contentPadding="7dp"
                app:cardBackgroundColor="@color/primary"
                app:layout_constraintBottom_toBottomOf="@+id/edtNameHabit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/edtNameHabit"
                app:layout_constraintTop_toTopOf="@+id/edtNameHabit">

                <ImageView
                    android:id="@+id/iconImg"
                    android:layout_width="24dp"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    app:tint="@color/white" />
            </androidx.cardview.widget.CardView>

            <!-- Theo dõi theo -->
            <TextView
                android:id="@+id/textView4"
                style="@style/TextAppearance.Material3.TitleMedium.Emphasized"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Theo dõi theo"
                app:layout_constraintStart_toStartOf="@+id/edtNameHabit"
                app:layout_constraintTop_toBottomOf="@+id/edtNameHabit" />

            <!-- Buttons: Task / Number / Time -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTask"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Nhiệm vụ"
                android:checkable="true"
                app:cornerRadius="12dp"
                app:strokeWidth="0dp"
                android:textSize="14sp"
                android:padding="0dp"
                app:rippleColor="@android:color/transparent"
                app:layout_constraintEnd_toStartOf="@+id/btnNumber"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNumber"
                android:layout_width="0dp"
                app:rippleColor="@android:color/transparent"
                android:layout_height="wrap_content"

                android:layout_marginStart="8dp"
                android:text="Số lượng"
                app:strokeWidth="0dp"
                android:textSize="14sp"
                android:padding="0dp"
                app:cornerRadius="12dp"
                android:checkable="true"
                app:layout_constraintBottom_toBottomOf="@+id/btnTask"
                app:layout_constraintEnd_toStartOf="@+id/btnTime"
                app:layout_constraintStart_toEndOf="@+id/btnTask"
                app:layout_constraintTop_toTopOf="@+id/btnTask" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTime"
                android:layout_width="0dp"
                app:rippleColor="@android:color/transparent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                app:strokeWidth="0dp"
                android:text="Thời gian"
                android:textSize="14sp"
                android:padding="0dp"
                android:checkable="true"
                 app:cornerRadius="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/btnNumber"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnNumber"
                app:layout_constraintTop_toTopOf="@+id/btnNumber" />

            <!-- Time Habit -->
            <View
                android:id="@+id/inputTimeHabit"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                android:background="@drawable/bg_item_on_surface"
                app:layout_goneMarginBaseline="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnNumber" />

            <TextView
                android:id="@+id/txtNumberTime"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/inputTimeHabit"
                app:layout_constraintEnd_toEndOf="@+id/inputTimeHabit"
                app:layout_constraintStart_toStartOf="@+id/inputTimeHabit"
                app:layout_constraintTop_toTopOf="@+id/inputTimeHabit" />

            <!-- Màu sắc -->
            <TextView
                android:id="@+id/textView5"
                style="@style/TextAppearance.Material3.TitleMedium.Emphasized"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="4dp"
                android:text="Màu sắc"
                app:layout_constraintBottom_toTopOf="@+id/rvColors"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputTimeHabit" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvColors"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <!-- Nhắc nhở -->
            <TextView
                android:id="@+id/textView6"
                style="@style/TextAppearance.Material3.TitleMedium.Emphasized"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Nhắc nhở"
                app:layout_constraintStart_toStartOf="@+id/rvColors"
                app:layout_constraintTop_toBottomOf="@+id/rvColors" />

            <View
                android:id="@+id/viewRemind"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_item_on_surface"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <ImageView
                android:id="@+id/imgRemind"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                app:tint="@color/onSurfaceVariant"
                android:src="@drawable/ic_schedule"
                app:layout_constraintBottom_toBottomOf="@+id/viewRemind"
                app:layout_constraintStart_toStartOf="@+id/viewRemind"
                app:layout_constraintTop_toTopOf="@+id/viewRemind" />

            <TextView
                android:id="@+id/txtTimeRemind"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:textColor="@color/onSurfaceVariant"
                app:layout_constraintBottom_toBottomOf="@+id/viewRemind"
                app:layout_constraintStart_toEndOf="@id/imgRemind"
                app:layout_constraintTop_toTopOf="@+id/viewRemind" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:checked="true"
                app:layout_constraintBottom_toBottomOf="@+id/viewRemind"
                app:layout_constraintEnd_toEndOf="@+id/viewRemind"
                app:layout_constraintTop_toTopOf="@+id/viewRemind"
                app:useMaterialThemeColors="true" />

            <!-- Ngày hoàn thành -->
            <TextView
                android:id="@+id/textView9"
                style="@style/TextAppearance.Material3.TitleMedium.Emphasized"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Ngày hoàn thành"
                app:layout_constraintStart_toStartOf="@+id/viewRemind"
                app:layout_constraintTop_toBottomOf="@+id/viewRemind" />

            <View
                android:id="@+id/viewDateEnd"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_item_on_surface"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <ImageView
                android:id="@+id/imgDateEnd"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                app:tint="@color/onSurfaceVariant"
                android:src="@drawable/ic_calendar"
                app:layout_constraintBottom_toBottomOf="@+id/viewDateEnd"
                app:layout_constraintStart_toStartOf="@+id/viewDateEnd"
                app:layout_constraintTop_toTopOf="@+id/viewDateEnd" />

            <TextView
                android:id="@+id/txtTimeEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/onSurfaceVariant"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/TextAppearance.Material3.BodyLarge"
                app:layout_constraintBottom_toBottomOf="@+id/viewDateEnd"
                app:layout_constraintStart_toEndOf="@id/imgDateEnd"
                app:layout_constraintTop_toTopOf="@+id/viewDateEnd" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Submit Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSubmit"
        style="@style/TextAppearance.Material3.TitleLarge.Emphasized"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/primary"
        android:textColor="@color/white"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>