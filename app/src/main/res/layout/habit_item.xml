<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/habitItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:strokeWidth="0dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="100dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardIconMain"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            app:strokeWidth="0dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/imgIconMain"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="10dp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="@+id/cardIconMain"
            app:layout_constraintStart_toStartOf="@+id/cardIconMain"
            app:layout_constraintEnd_toEndOf="@+id/cardIconMain"
            app:layout_constraintTop_toTopOf="@+id/cardIconMain"
            />
        <TextView
            android:id="@+id/txthabitMain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/txtStatusHabit"
            app:layout_constraintEnd_toStartOf="@+id/habitCheckbox"
            app:layout_constraintStart_toEndOf="@+id/cardIconMain"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/txtStatusHabit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/txthabitMain"
            app:layout_constraintStart_toStartOf="@+id/txthabitMain"
            app:layout_constraintTop_toBottomOf="@+id/txthabitMain" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/habitCheckbox"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="200dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeWidth="2dp"/>

        <ImageView
            android:id="@+id/imgCheckedHabit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:padding="2dp"
            app:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/habitCheckbox"
            app:layout_constraintStart_toStartOf="@+id/habitCheckbox"
            app:layout_constraintEnd_toEndOf="@+id/habitCheckbox"
            app:layout_constraintTop_toTopOf="@+id/habitCheckbox"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>